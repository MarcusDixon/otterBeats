<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dimao.otterbeats.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Otter Beats!"
        android:id="@+id/textView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy"
        android:id="@+id/happyButton"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/elevateMaintainButton"
        android:layout_alignEnd="@+id/textView" />


<!--    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/pauseButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/playButton"
        android:layout_marginBottom="65dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/playButton"
        android:layout_above="@+id/prevButton"
        android:layout_centerHorizontal="true" />-->

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat"
        android:id="@+id/repeatButton"
        android:textOff="Repeat All"
        android:textOn="Repeat All"
        android:layout_alignTop="@+id/shuffleButton"
        android:layout_alignStart="@+id/prevButton" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shuffle"
        android:id="@+id/shuffleButton"
        android:textOff="Shuffle"
        android:textOn="Shuffle"
        android:layout_marginBottom="67dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/playPauseButton" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="playPause"
        android:id="@+id/playPauseButton"
        android:textOff="Pause"
        android:textOn="Play"
        android:layout_marginBottom="90dp"
        android:layout_above="@+id/shuffleButton"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="elevateMaintain"
        android:id="@+id/elevateMaintainButton"
        android:textOff="Maintain"
        android:textOn="Elevate"
        android:layout_alignTop="@+id/textView"
        android:layout_alignEnd="@+id/skipButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prevButton"
        android:src="@drawable/prev"
        android:layout_alignBottom="@+id/playPauseButton"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/skipButton"
        android:src="@drawable/skip"
        android:layout_alignTop="@+id/prevButton"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
